@{
    ViewBag.Title = "Home Page";
}

@model List<MVC_Blog.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                <p>
                    Publikuvano 

                    @if (post.Author != null)
                    {
                        //ot tuk @: do kraq na skobite e tekst valsheben klyuch !
                        @:ot  
                        <i>@post.Author.FullName (@post.Author.UserName)</i>
                    }
                    na <i>@post.Date</i>
                </p>

            </div>
            <div class="body">
                @Html.Raw(post.Body)
            </div>
        </article>
    }
</section>